/* miniprogram/pages/home/shop/shop.wxss */
.back{
   float: left;
   width: 40rpx;
   height: 40rpx;
   margin: 16rpx;
}
.info{
   display: flex;
   align-self: center;
   margin-top: 16rpx;
   
}

.products{
   margin: 6rpx 0;
   display: flex;
   /* flex容器为多行。该情况下flex子项溢出的部分会被放置到新行，子项内部会发生断行 */
   flex-wrap: wrap;
   /* 可以使每个元素之间和元素距离边距的距离都相等 */
   justify-content: space-evenly;
 }
.products .product{
   width: 48%;
   /* 水平方向居中 */
   text-align: center;
 }
.products .product image{
   width: 100%;
   height: 360rpx;
 }
 .info-box{
   padding:4rpx 0;
 }
.info-box .title{
     color: rgba(0, 0, 0, 0.87);
     font-size: 28rpx;
 }
.info-box .infolist{
   color: rgba(0, 0, 0, 0.54);
   font-size: 24rpx;
   
}
.products .product .info-box .price {
   color: #ea625b;
   font-size: 28rpx;
}
